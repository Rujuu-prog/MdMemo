{
  "name": "mdmemo",
  "private": true,
  "version": "0.1.5",
  "author": "Rujuu",
  "main": "dist/electron/main/main.js",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "app:dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "app:build": "yarn run vite:build && tsc && electron-builder -mwl --publish never",
    "app:build:mac": "yarn run vite:build && tsc && electron-builder --mac --publish never",
    "app:build:win": "yarn run vite:build && tsc && electron-builder --win --publish never",
    "app:build:linux": "yarn run vite:build && tsc && electron-builder --linux --publish never",
    "app:preview": "yarn run vite:build && tsc && electron ."
  },
  "build": {
    "appId": "YourAppID",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@types/turndown": "^5.0.4",
    "ant-design-vue": "4.x",
    "turndown": "^7.1.2",
    "vue": "^3.4.15"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1",
    "marked": "^12.0.0",
    "postcss": "^8.4.35",
    "typescript": "^5.2.2",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.0",
    "vue-tsc": "^1.8.27"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  }
}
